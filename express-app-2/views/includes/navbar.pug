nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
    .container
        a(href="/").navbar-brand Kitaplık
        ul.navbar-nav.mr-auto

            li.nav-item
                a(href="/", class=(path === '/'?'nav-link active':'nav-link')) Ana Sayfa

            li.nav-item
                a(href="/products", class=(path === '/products'?'nav-link active':'nav-link')) Ürünler 

            if isAuthenticated

                li.nav-item
                    a(href="/cart", class=(path === '/cart'?'nav-link active':'nav-link')) Sepet

                li.nav-item
                    a(href="/orders", class=(path === '/orders'?'nav-link active':'nav-link')) Emirler      
                        
